<table>
    <tr>
        <th>Tarea</th>
        <th>Prioridad</th>
        <th>Horas</th>
        <th>Acciones</th>
    </tr>

    {% for task in tasks %}
        <tr>
            <td>
                {{ task.title }}
                {% if current_route_name != 'tasks_mine'  %}
                    <br/>
                    <small>{{ task.user.name }}</small>
                {% endif %}
            </td>
            <td>{{ task.priority }}</td>
            <td>{{ task.hours }}</td>
            <td class="buttons">
                <a href="{{ path('task', {'id':task.id}) }}" class="btn-view">Ver</a>
                {% if (app.user != null and task.user.id == app.user.id) or (is_granted('ROLE_ADMIN')) %}
                    <a href="{{ path('task_edit', {'id':task.id}) }}" class="btn-edit">Editar</a>
                    <a href="{{ path('task_delete', {'id':task.id}) }}" class="btn-delete">Borrar</a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
