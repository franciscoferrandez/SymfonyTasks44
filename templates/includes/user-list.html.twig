<table>
    <tr>
        <th>{% trans %}Name{% endtrans %}</th>
        <th>{% trans %}Role{% endtrans %}</th>
        <th>{% trans %}Email{% endtrans %}</th>
        <th>{% trans %}Actions{% endtrans %}</th>
    </tr>

    {% for user in users %}
        <tr>
            <td>{{ user.name ~ ' ' ~ user.surname|trim }}</td>
            <td>{{ user.role }}</td>
            <td>{{ user.email }}</td>
            <td class="buttons">
                {% if (app.user != null and user.id == app.user.id) or (is_granted('ROLE_ADMIN')) %}
                    <a href="{{ path('user_edit', {'id':user.id}) }}" class="btn-edit">{% trans %}Edit{% endtrans %}</a>
                {% endif %}
                {% if (app.user != null and user.id != app.user.id) and (is_granted('ROLE_ADMIN')) %}
                    <a href="{{ path('user_delete', {'id':user.id}) }}" class="btn-delete">{% trans %}Delete{% endtrans %}</a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
